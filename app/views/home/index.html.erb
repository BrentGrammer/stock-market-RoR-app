<h3>Look up a Stock</h3>

<%= form_tag root_path, :method => 'POST' do %>
  <form class="form-group">
      <%= text_field_tag 'id', nil, placeholder: 'Enter ticker', size: 50 %>
      <%= submit_tag 'Submit' %>
  </form>
<% end %>

<br />

<% if @stock %>
  <strong>Company name: </strong><%= @stock.company_name %>
  <strong>Open Price: </strong><%= @stock.open %>
  <strong>Close Price: </strong><%= @stock.close %>
  <strong>Market Cap: </strong><%= @stock.market_cap %>
<% elsif @nothing %>
  <%= @nothing %>
<% end %>

<% if @error %>
  <%= @error %>
<% end %>